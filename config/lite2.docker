FROM nvcr.io/nvidia/tensorflow:20.08-tf2-py3 as base

RUN apt-get update && apt-get install -y --no-install-recommends \
vim build-essential cmake autoconf automake autopoint libglib2.0-dev libtool libsm6 libxrender1 libxext6 && apt-get clean && rm -fr /var/lib/apt/lists/*

RUN pip3 install --no-cache-dir opencv-python Pillow progressbar2 dill pyyaml pandas scikit-learn tator>=0.10.0 tensorflow-hub

COPY deploy_python2 /deploy_python2

WORKDIR /deploy_python2
RUN pip3 install .
WORKDIR /

